<apex:page Controller="OauthClass">
<apex:pageMessages />
<apex:form >
   <apex:pageBlock rendered="{!submitted}">
       Thank you for trial. It takes less than 10 mins to get the email notification on your spin org.
   </apex:pageBlock>
  <apex:pageBlock title="Sign Up Request" mode="edit" rendered="{!!submitted}" >
  <apex:pageBlockSection title="Detail Page" >
      <apex:pageBlockSectionItem >
        <apex:outputLabel value="First Name" />
        <apex:panelGroup >
         <div class="requiredInput">
                    <div class="requiredBlock"></div>
         <apex:inputText value="{!firstName}" required="true"/>
         </div>   </apex:panelGroup>
      </apex:pageBlockSectionItem>

      <apex:pageBlockSectionItem >
       <apex:outputLabel value="Last Name"  />
       <apex:panelGroup >
         <div class="requiredInput">
                    <div class="requiredBlock"></div>
        <apex:inputText value="{!LastName}" required="true"/>
         </div>   </apex:panelGroup>
      </apex:pageBlockSectionItem>

      <apex:pageBlockSectionItem helpText="{!$ObjectType.SignupRequest.fields.Company.InlineHelpText}">
       <apex:outputLabel value="Company"  />
        <apex:panelGroup >
        <div class="requiredInput">
                    <div class="requiredBlock"></div>
        <apex:inputText value="{!company}" required="true"/>
         </div>   </apex:panelGroup>
      </apex:pageBlockSectionItem>

     <apex:pageBlockSectionItem helpText="{!$ObjectType.SignupRequest.fields.SignupEmail.InlineHelpText}">
       <apex:outputLabel value="SignupEmail"  />
        <apex:panelGroup >
        <div class="requiredInput">
                    <div class="requiredBlock"></div>
        <apex:inputText value="{!SignupEmail}" required="true"/>
          </div>   </apex:panelGroup>
     </apex:pageBlockSectionItem>

      <apex:pageBlockSectionItem helpText="{!$ObjectType.SignupRequest.fields.Country.InlineHelpText}">
       <apex:outputLabel value="Country"  />
        <apex:panelGroup >
        <div class="requiredInput">
          <div class="requiredBlock"></div>
         
          <apex:selectList value="{!Country}" size="1">
            <apex:selectOption itemLabel="US" itemValue="US"/>
            <apex:selectOption itemLabel="JP" itemValue="JP"/>
          </apex:selectList><p/>
          </div>  
        </apex:panelGroup>
     </apex:pageBlockSectionItem>

      <apex:pageBlockSectionItem >
       <apex:outputLabel value="Username"  />
        <apex:panelGroup >
        <div class="requiredInput">
                    <div class="requiredBlock"></div>
        <apex:inputText value="{!signupusername}" required="true" />
         </div>   </apex:panelGroup>
     </apex:pageBlockSectionItem>

      <apex:pageBlockSectionItem >
       <apex:outputLabel value="Description"  />
        <apex:inputText value="{!description}" />
     </apex:pageBlockSectionItem>
      
        
  </apex:pageBlockSection>
   <apex:pageBlockButtons >
                 <apex:commandButton action="{!login}" value="Submit" id="theButton"/>
   </apex:pageBlockButtons>

  </apex:pageBlock>
  </apex:form>
</apex:page>