<apex:page standardController="Opportunity"
		   extensions="CustomOpptyApprovalsLaunchController"
		   action="{!doLaunchApprovals}">

	<apex:form >
		<apex:outputPanel id="idErrorPanel">
			<apex:pageBlock >
				<apex:pageMessages id="idErrorPage" rendered="{!hasErrors}"/>
				<apex:pageBlockButtons >
					<apex:commandButton value="(!$Label.Apttus_Approval__OK}" action="{!doReturn}" />
				</apex:pageBlockButtons>
			</apex:pageBlock>
		</apex:outputPanel>
	</apex:form>
</apex:page>