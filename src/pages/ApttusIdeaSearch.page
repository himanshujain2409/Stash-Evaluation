<apex:page standardController="Idea" extensions="ApttusIdeaSearchController" action="{!doSearchIdeas}" id="thePage">
<script>
Window.onLoad = function() {
                var html_doc = document.getElementById('thePage');
                var newdiv = document.createElement('div');
                var divIdName = 'myDiv';
                newdiv.setAttribute('id',divIdName);
                newdiv.setAttribute('align','right');
                newdiv.innerHTML = '<form>Search Ideas: <input id="myId" type="text" name="SearchIdeas" /><input type="button" value="Search" onClick="window.location.href=\'/apex/ApttusIdeaSearch?q=\' + document.getElementById(\'myId\').value;"/></form>';
                //html_doc.appendChild(newdiv);}}
                html_doc.insertBefore(newdiv, html_doc.firstChild);
                
                };
</script>
<c:ApttusCustomerPortalDynamicMenu /> 
<apex:pageblock id="thePageBlock" title="Search for Ideas: {!$CurrentPage.parameters.q}">
<apex:pageBlockTable value="{!lstIdeaResult}" var="var" id="thePbTable">
<!-- <apex:column value="{!var.Id}"></apex:column> -->
<apex:column headerValue="Idea Title">
<apex:outputLink value="/ideas/viewIdea.apexp?id={!var.Id}" >{!var.Title}</apex:outputLink>
</apex:column>
<apex:column value="{!var.Body}"></apex:column>
<apex:column value="{!var.Categories}"></apex:column>
<!--<apex:column value="{!var.VoteScore}"></apex:column>-->
<apex:column value="{!var.VoteTotal}"></apex:column>
</apex:pageBlockTable>
</apex:pageblock>
</apex:page>