<apex:page renderAs="pdf" contentType="application/pdf" controller="LMSCertificate">
<html>
<head>
<style>
@page { size: A4 landscape; margin: 0mm; }
* { color: #585858; font: 1em/1.5 Arial, Helvetica, sans-serif; margin: 0; padding: 0; }
html, body {
height: 100%;
}
body {
background: url({!URLFOR($Resource.assets_apttus_cert, 'img/bg.png')}) no-repeat center center;
}
i {
font-style: italic;
}
.avg {
display: table;
margin: 0 auto;
text-align: center;
}
.logo {
margin: 8em 0 0;
}
.title {
border-style: dashed;
border-width: 1px 0;
font-size: 3em;
line-height: 2;
margin: -1.5em 0 0.5em;
}
table {
font-size: 1.15em;
margin: 0 auto;
width: 100%;
}
table td {
border: 0;
padding: 0.5em 0;
}
table + table {
margin: 1em auto 0;
width: 45%;
}
table + table tr td {
border-bottom: 1px dashed;
}
table + table tr + tr td {
border: 0;
}
</style>
</head>
<body>
<div class="avg">
<img class="logo" src="{!URLFOR($Resource.assets_apttus_cert, 'img/logo.png')}" width="384"/>
<h1 class="title">CERTIFICATE OF COMPLETION</h1>
<table>
<tr>
<td>THIS CERTIFIES THAT</td>
</tr>
<tr>
<td>{!Username}</td>
</tr>
<tr>
<td>HAS SATISFACTORILY COMPLETED</td>
</tr>
<tr>
<td>{!Title}</td>
</tr>
</table>
<table>
<tr>
<td>COMPLETION DATE</td>
</tr>
<tr>
<td><apex:outputText value="{0,date,MMMM dd, yyyy}"><apex:param value="{!CompletionDate}"/></apex:outputText></td>
</tr>
</table>
</div>
</body>
</html>
</apex:page>