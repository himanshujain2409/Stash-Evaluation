 <apex:dataTable id="caseTable" value="{!CasesToExportList}" var="case" width="100%" border="1" align="left">
     <apex:repeat value="{!listView}" var="p">  
         <apex:column headerValue="{!p.Display_Name__c}"> 
             <apex:outputText value="{!case[p.Field_API_Name__c]}">
             </apex:outputText>
         </apex:column>
     </apex:repeat> 
 </apex:dataTable>
                 
</apex:page>