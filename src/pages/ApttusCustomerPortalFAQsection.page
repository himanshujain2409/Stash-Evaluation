<apex:page controller="ACPFAQController">

<script>
		jQuery(document).ready(function(){
			jQuery('#docSearchBar').append(jQuery('[name="srch_document_sbar"]'));
			jQuery('#docSearchBar #srch_document_sbar .btn').attr('value', 'Find Document');
		});
</script>

<style>
#faq h1,
#faq h2,
#faq h4,
#faq h5,
#faq h6{
       display:block;
       margin-bottom: 20px;
}
#faq div{
       display:block;
}
#faq ul{
       list-style-type: circle;
       padding-left: 5px;
}
#faq ul{
       margin-left: 30px;
}
#faqBolck .lbBody{
	font-family:Arial,Helvetica,sans-serif;
	font-size:12px;
}

#docSearchBar #srch_document_sbar .btn{
			background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #ededed), color-stop(1, #dfdfdf) );
			background:-moz-linear-gradient( center top, #ededed 5%, #dfdfdf 100% );
			filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#ededed', endColorstr='#dfdfdf');
			background-color:#ededed;
			-moz-border-radius:6px;
			-webkit-border-radius:6px;
			border-radius:6px;
			border:1px solid #dfdfdf;
			display:inline-block;
			color:#1b5c78;
			font-family:Arial,Helvetica,sans-serif;
			font-size:12px;
			font-weight:bold;
			padding:2px 14px;
			text-decoration:none;
		}
		.searchTextBox,
		#searchTextLabel{
			font-family:Arial,Helvetica,sans-serif;
			font-size:12px;
		}
		#faqs .pbBody .pbSubheader{
			background:#999999;
			cursor:pointer;
		}
	
		#sectionFunctions{
			border-left-width: 1px;
		    border-right-width: 1px;
		    border-top-width: 1px;
		    font-family: Arial;
		    font-size: 10px;
		    font-weight: bold;
		    margin-bottom: 20px;
		    text-decoration:underline;
		    margin-top:5px;
		}
		#sectionFunctions a, #sectionFunctions a:visited {
			color: #326DB5;
		}

		.bPageBlock .pbTitle {
			vertical-align: baseline;
		}
</style>
<div id="faqs">
	<div id="searchSection" style="margin-left:16px; margin-bottom:20px;">
		<div id="searchTextLabel">
			Enter keywords to find matching documents.
		</div>
		<div id="docSearchBar" style="margin-bottom:10px; margin-top:5px;"></div>
	</div>
	<apex:pageBlock id="faqBlock" title="Frequently Asked Questions">
		<div id="sectionFunctions">
			<a id="showAnswerList" title="Expand the entire tree below" href="javascript:void(0)" onclick="showAnswers()"><img src="{!URLFOR($Resource.ApttusCustomerPortalJQueryTree, '/images/plus.gif')}" /> Expand All</a>
			<a id="hideAnswerList" title="Collapse the entire tree below" href="javascript:void(0)" onclick="hideAnswers()"><img src="{!URLFOR($Resource.ApttusCustomerPortalJQueryTree, '/images/minus.gif')}"/> Collapse All</a>
			
		</div>
		<apex:repeat id="repeaterFaq" value="{!faqs}" var="faq">
			<apex:pageBlockSection id="sectionQst" title="{!faq.Question__c}" columns="1">
				<apex:outputText value="{!faq.Answer__c}" escape="false"/>
			</apex:pageBlockSection>
		</apex:repeat>

	</apex:pageBlock>
	
	<script>
	 	jQuery('.hideListButton').each( function(){
	               twistSection(jQuery('.hideListButton')[0]);
		});
		
		function hideAnswers(){
    		jQuery('.hideListButton').each( function(){
	               twistSection(jQuery('.hideListButton')[0]);
			});
		}

		function showAnswers(){
			jQuery('.showListButton').each( function(){
	               twistSection(jQuery('.showListButton')[0]);
			});
		}

		jQuery('.brandTertiaryBgr').unbind('click').click(function(){
			twistSection(document.getElementById(jQuery(this).children('img').attr('id')));
		});
		jQuery('.brandTertiaryBgr img').attr('onclick','').unbind('click');
		
	</script>
</div>

		
</apex:page>