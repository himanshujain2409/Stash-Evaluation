<apex:page showHeader="false" sidebar="false" standardStyleSheets="false" id="loginPage">
    <script charset="utf-8">
        window.onload=function(){
           
            var myOutputLabel = document.getElementById('loginPage:outputText');
         
            var firstName = "{!$User.FirstName}";
            var lastName = "{!$User.LastName}";
            
            var v = firstName+' '+lastName;
            if(v.length > 20){
                v = v.substring(0,20);
                v = v + '...';
            }
            myOutputLabel.innerHTML= 'Welcome, '+v;
        };
    </script>
    <!-- Project Theme Style Sheet -->
    <link rel="stylesheet" href="{!URLFOR($Resource.Assets, '/assets/css/project-theme.css')}"></link>
    <apex:outputLabel id="outputText"  title="{!$User.FirstName + ' ' + $User.LastName}"/>
    <style>
        body
        {
            margin: 0;
            padding: 0;
            display: inline-block;
        }
        
        label
        {
            font-weight:bold;
            font-size: 13px;
            font-family: 'Flaticon';
            color: #fff;
        }
    </style>
</apex:page>