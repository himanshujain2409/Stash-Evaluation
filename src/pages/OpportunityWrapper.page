<apex:page standardController="Opportunity" extensions="OpportunityWrapperController">


<apex:form >
    <apex:detail showChatter="true" inlineEdit="true" oncomplete="document.location.reload(true);"></apex:detail>
</apex:form>


    <apex:outputPanel rendered="{!NOT(ISNULL(oppFull.Training_Content_Ids__c))}">

        <apex:form >
            <apex:actionFunction name="openModule" action="{!openModule}" reRender="" />
            <apex:actionFunction name="NoOpenModule" action="{!NoOpenModule}" reRender="" />
        </apex:form>

        <apex:stylesheet value="{!URLFOR($Resource.res_linkedin_lightbox, 'css/linkedin.css')}" />
        <apex:stylesheet value="{!URLFOR($Resource.res_linkedin_lightbox, 'css/colorbox.css')}" />
        <apex:includeScript value="{!URLFOR($Resource.res_linkedin_lightbox, 'js/jquery.js')}" />
        <apex:includeScript value="{!URLFOR($Resource.res_linkedin_lightbox, 'js/jquery.colorbox.js')}" />


        <script type="text/javascript">
        $.noConflict();
        jQuery(document).ready(function(){

            jQuery("a.colorbox").colorbox({width:"700", height:"300", inline:true});

            var colorboxopen = jQuery('a.colorbox');
            var colorboxclose = jQuery('#inline-content .m-close');
            var colorboxoverlay = jQuery('#cboxOverlay');
            var colorboxlightbox = jQuery('#colorbox');



            colorboxopen.click( function() {
                colorboxlightbox.fadeIn();
                colorboxoverlay.fadeIn();
                jQuery("#cboxClose").hide();
            });


            colorboxclose.click( function() {
                colorboxlightbox.fadeOut('fast');
                colorboxoverlay.fadeOut('fast');
                jQuery("#cboxClose").hide();
                return false;
            });

            setTimeout(function(){colorboxopen.click();}, 3000);

        });

        function openInNewWindow(link){
            window.open (link, "NewWindow","status=1,toolbar=1,resizable=1,scrollbars=1,location=1");
        }
        </script>

            <p><a class="colorbox" href="#inline-content">Open Lightbox</a></p>
            <div style='display:none'>
                <div id='inline-content' class="m-inline-content">
                    <p><strong>Hey {!UserName}!</strong><br /><br />
                    The Sales Effectiveness team wants to help you Maximize your deal size!<br /><br />
                    Based on your current work on {!oppFull.Name}, we want to help grow this  {!oppFull.Amount} deal by 30% AND help get your deal done before your current close date of {!oppFull.CloseDate}!<br /><br />
                    This {!ModuleName} is the best way to help you.  Click YES or NO to learn how to win by leveraging best practices from similar won deals!<br /><br />
                    </p>
                    <input type="submit" value="Yes" class="btn-primary m-close" onclick="javascript:openInNewWindow('/apex/lmscons__ConsumerDirector?action=LaunchContent&tuId={!tu_item.Id}'); openModule();"/>
                    <input type="submit" value="No" class="btn-secondary m-close" onclick="NoOpenModule();"/>
                </div>
            </div>

    </apex:outputPanel>

</apex:page>