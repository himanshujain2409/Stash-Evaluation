<apex:page standardStylesheets="false" controller="ACPOrganizationController">

<style>
    .smallbox .people    {background: url("{!URLFOR($Resource.ApttusCustomerPortalHomeBoxesImages, $Label.ACPHomeBoxesDocumentationImage)}")}
    .smallbox .books     {background: url("{!URLFOR($Resource.ApttusCustomerPortalHomeBoxesImages, $Label.ACPHomeBoxesIdeasImage)}")}
    .smallbox .notes     {background: url("{!URLFOR($Resource.ApttusCustomerPortalHomeBoxesImages, $Label.ACPHomeBoxesKnowledgeBaseImage)}")}
    .smallbox .checklist {background: url("{!URLFOR($Resource.ApttusCustomerPortalHomeBoxesImages, $Label.ACPHomeBoxesMyCasesImage)}")}
    .smallbox .training  {background: url("{!URLFOR($Resource.ApttusCustomerPortalHomeBoxesImages, $Label.ACPHomeBoxesTrainingImage)}")}
    .smallbox .install   {background: url("{!URLFOR($Resource.ApttusCustomerPortalHomeBoxesImages, $Label.ACPHomeBoxesInstallCenterImage)}")}
  

</style>
<c:ApttusCustomerPortalDynamicMenu />
<script>
    var d = new Date();
    d.setTime(d.getTime()+(8*60*60*1000));  
    var username = "Welcome, {!$User.FirstName} {!$User.LastName}";
    document.cookie = "usernameMsg="+username + ";path=/;expires="+d.toGMTString();
    document.cookie = "CommunityProfile={!IsRestrictedProfile}" + ";path=/;expires="+d.toGMTString();
    
      
    document.cookie = "trainingTabAvailable=" + {!$User.lmscons__Cornerstone_ID__c != NULL} + ";expires="+d.toGMTString();
</script>

<apex:outputPanel >
<div class="searchBarContainer clearfix" style="display:block">
    <span style="float:left;margin-top: 10px;">
        <c:ApttusCustomerPortalHomeSearchBar />
    </span>

    <ul class="searchNavigationButtons">
        <!-- <li><a href="mailto:training@apttus.com?Subject=Apttus University">Take Training</a></li> -->
        <apex:outputPanel rendered="{!IsTrainingAvailable}">
        <li><a href="{!$Page.lmsilt__Calendar}?f=1&username={!$User.FirstName}|{!$User.LastName}">Take Training</a></li>
        </apex:outputPanel>
        <li><a href="http://www.apttus.com/company/contact-us.php" target="_blank">Contact Us</a></li>
        <li><a href="http://www.apttus.com/solutions/quote-to-cash/" target="_blank">Additional Apps</a></li>
    </ul>
</div>
</apex:outputPanel>
