<apex:page id="loginPage" showHeader="false" standardStylesheets="false" title="{!$Label.site.site_login}" controller="ACPSiteLoginController">
    <apex:stylesheet value="{!URLFOR($Resource.ApttusCustomerPortalSiteLogin, 'css/main.css')}"/>
    <!--[if lt IE 10]>
        <style>
            #left_box input[type=submit] { background: url("{!URLFOR($Resource.ApttusCustomerPortalSiteLogin, '/img/btn_gradient.png')}"); }
        </style>
    <![endif]-->
    <!--[if lt IE 9]>
