    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script>
        $j = jQuery.noConflict();

        $j(document).ready(function() {
            $j("#bookmark").click(function (evt) {
                evt.preventDefault();
                var title = "Apttus Customer Portal";

                if (window.sidebar) {
                    window.sidebar.addPanel(title, document.URL, "");
                } else if(document.all) {
                    window.external.AddFavorite(document.URL, title);
                } else {
                    alert("To bookmark this page press:\n" +
                           "    Ctrl+D (Windows or Linux), or\n" + 
                           "    Command+D (Mac OS)");
                }
            });
        });
    </script>

    <div class="container">
    
        <!-- Header -->
        <div id="login_header">
            <div id="login_header_content">
                <a class="logo" href="http://www.apttus.com"><img src="{!URLFOR($Resource.ApttusCustomerPortalSiteLogin, 'img/logo.gif')}"/></a>
                <h1>Success Portal</h1>
                <span id="bookmark"><a href="#" rel="bookmark">Bookmark this page</a></span>
            </div>
        </div>

        <!-- Lower grid -->
        <div id="login_lower_grid">
            <apex:pageMessages id="error"/>

            <div id="content_top" class="clearfix">
                <div id="left_box" class="box">
                    <div class="content">
                        <c:ApttusCustomerPortalSiteLogin id="siteLogin"/>

                        <div class="separator">
                        </div>

                        <div class="lower_content">
                                <h1><a href="http://info.apttus.com/ApttusSolutionslogin.html" target="_blank"><b>Additional Applications</b></a></h1>
                                <p>
                                    Find out how Apttus can help your business with the complete quote-to-cash process.
                                </p>
                        </div>
                    </div>
                </div>
                <div id="right_box">
                    <div class="box">
                        <div class="content">
                            <a class="img_link" href="http://www.apttus.com/accelerate2015/" target="_blank"></a>
                        </div>
                    </div>
                    <div class="box">
                        <div class="content">
                            <a class="img_link" href="http://info.apttus.com/Deal-Maximizer.html" target="_blank"></a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Status -->
            <div id="system_status" class="box">
                <div class="content">
                    <h1>System Status</h1>
                    <hr/>
                    <p>
                        Security Alerts, Best Practices, and System Status. To review live and historical data on system performance, review any security alerts, 
