<apex:page >
<style>
.university{
	margin-left: 41px;
	margin-top: 20px;
	margin-bottom: 49px;
}

.university h1{
	font-size: 32px;
	line-height: 32px;
	display: block;
	color: #66AA00;
	margin-bottom: 20px;
}

.university ul li{
	line-height: 30px;
	font-size: 20px;
	margin-left:16px;
}

.university ul{
	list-style:none;
	list-style-type: disc;
	list-style-position: outside;
}

.university ul li ul{
	list-style-type: circle;
}

.university ul li ul li{
	margin-left:20px;
}

/* button style */
	.university .install-link{display:block; margin-top:20px;}
	.university .button-link {
		margin-right: 10px;
	    padding: 10px 15px;
	    background: #1B5C78;
	    color: #FFF;
        -webkit-border-radius: 4px;
		-moz-border-radius: 4px;
		border-radius: 4px;
		border: solid 1px #20538D;
		text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
		-webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
		-moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
		box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
		-webkit-transition-duration: 0.2s;
	    -moz-transition-duration: 0.2s;
	    transition-duration: 0.2s;
	}
	
	.university .button-link:hover, 
	.university .button-link:focus {
	   background: #66AA00;
	   border: solid 1px #2A4E77;
	   text-decoration: none;
	}
	
	.university .button-link:active {
	    -webkit-box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6);
	    -moz-box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6);
	    box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.6);
	    background: #2E5481;
	    border: solid 1px #203E5F;
	}
	
	.university .button-link {
	    -webkit-user-select:none;
	    -moz-user-select:none;
	    -ms-user-select:none;
	    user-select:none;
	}
	
	.university .button-link{
		margin-top: 39px;
		display: inline-block;
		float: left;
		margin-right: 236px;
		margin-bottom: 37px;
	}

</style>
<div class="university">
	<apex:outputText value="{!$Label.ACPTrainingApttusUniversity}" escape="false" />
	<apex:outputLink value="/apex/ApttusCustomerPortalTraining" styleClass="button-link">			
		View Courses
	</apex:outputLink>
</div>

</apex:page>