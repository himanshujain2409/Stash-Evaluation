<apex:page id="loginPage" showHeader="false" standardStylesheets="false" title="{!$Label.site.site_login}" controller="CommunitySiteLoginController">
    <apex:stylesheet value="{!URLFOR($Resource.ApttusCustomerPortalSiteLogin, 'css/main.css')}"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <link href="{!URLFOR($Resource.CustomerLoginStyle,'salesforce-login.css')}" rel="stylesheet"  type="text/css"></link>
    <script>
        $j = jQuery.noConflict();

        var testing;


        $j(document).ready(function() {
            $j("#bookmark").click(function (evt) {
                evt.preventDefault();
                var title = "Apttus Customer Portal";

                if (window.sidebar) {
                    window.sidebar.addPanel(title, document.URL, "");
                } else if(document.all) {
                    window.external.AddFavorite(document.URL, title);
                } else {
                    alert("To bookmark this page press:\n" +
                           "    Ctrl+D (Windows or Linux), or\n" + 
                           "    Command+D (Mac OS)");
                }
            });
        });
    </script>
    <!-- TEST COMMENT -->
    <div class="container">
    
        <!-- Header -->
