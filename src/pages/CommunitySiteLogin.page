                <h1>Success Portal</h1>
                <span id="bookmark"><a href="#" rel="bookmark">Bookmark this page</a></span>
            </div>
        </div>

        <!-- Lower grid -->
        <div id="login_lower_grid">
            <apex:pageMessages id="error"/>

            <div id="content_top" class="clearfix">
                <div id="left_box" class="box">
                    <div class="content">
                        <apex:form id="loginForm">
                            <div class="form-title">
                                <h2>Apttus Community</h2>
                            </div>
                        <!--c:ApttusCustomerPortalSiteLogin id="siteLogin"/-->
                            <apex:outputPanel layout="block" id="siteLogin" rendered="{!isShowLogin}">
                              <apex:panelGrid columns="1" style="margin-top:1em;">
                                <apex:outputLabel value="{!$Label.site.username}" for="username"/>
                                <apex:inputText id="username" value="{!username}"/>
                                <apex:outputLabel value="{!$Label.site.password}" for="password"/>
                                <apex:inputSecret id="password" value="{!password}"/>
                                <apex:panelGroup >
                                    <apex:inputCheckbox title="Remember My Username" id="rememberUser" value="{!rememberUser}"/>
                                    <label for="rememberUser">Remember User Name</label>
                                </apex:panelGroup>

                                <apex:panelGroup id="theLinks">
                                  <apex:commandButton action="{!login}" value="{!$Label.site.login_button}" id="loginButton"/>
                                  <apex:commandLink value="{!$Label.site.forgot_your_password_q}" action="{!forgotPassword}" reRender="loginForm"/>
                                </apex:panelGroup>
                              </apex:panelGrid> 
                            </apex:outputPanel>
                            <apex:outputPanel rendered="{!isForgotPassword}">
                                <b>Did you forget your password? Please enter your user name below. </b><br/><br/>
                                <apex:outputLabel value="{!$Label.site.username}" 
                                    styleClass="label"/>
                                <apex:inputText styleClass="text" 
                                value="{!username}" /><br/>
                                <apex:commandButton value="Submit" action="{!submit}" style="margin-right: 10px;" reRender="loginForm"/>
                                <apex:commandButton value="Back To Login" action="{!backToLogin}" reRender="loginForm"/>
                            </apex:outputPanel>
                            <apex:outputPanel rendered="{!isShowForgotPasswordConfirmationMsg}">
                                <p>Please verify your mail.<apex:commandLink value="Return to login page" action="{!returnToLogin}" reRender="loginForm"/></p>
                            </apex:outputPanel>
                        </apex:form>
