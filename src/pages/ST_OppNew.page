<apex:page standardController="Event" extensions="ST_OppNew" showHeader="true" sideBar="true">
    <style>
      .activeTab {background-color: #236FBD; color:white; 
         background-image:none}
      .inactiveTab { background-color: lightgrey; color:black; 
         background-image:none}
    </style>
    <apex:form >
    <apex:pageMessages />
    <apex:pageBlock title="Create Opportunity From MI Event" mode="edit">
    <apex:pageBlockButtons >
        <apex:commandButton action="{!createOpp}" value="Create Opportunity"/>
        <apex:commandButton action="{!cancelOpp}" value="Cancel"/>
    </apex:pageBlockButtons>
    <apex:pageBlockSection title="Close All Rounds" columns="2">
	<apex:selectRadio value="{!closeEntireAccount}">
	<apex:selectOptions value="{!items}"/>
	</apex:selectRadio>
    <apex:pageBlockSectionItem />
    </apex:pageBlockSection>
    </apex:pageBlock>
    </apex:form>
</apex:page>