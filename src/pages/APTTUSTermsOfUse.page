<apex:page controller="APTTUSTermsOfUseController" showHeader="false" sidebar="false">
    <apex:form >
        <apex:pageBlock mode="maindetail">
            <div>
                <table height="100px" width="100%" cellpadding="0" cellspacing="0" style="background-color: #E1EAED;">
                    <tr>
                        <td width="5%"><apex:image url="http://apttus.com/wp-content/themes/apptus-theme/images/logo_img.png" /></td>
                    </tr>
                </table>
                <apex:pageBlockButtons location="bottom">
                    <apex:commandButton value="I Agree" action="{!iAgree}" reRender="frm"/>
                    <apex:commandButton value="Do Not Agree" action="{!doNotAgree}" reRender="frm"/>
                </apex:pageBlockButtons>
                <div style="margin-top:1%;">
                    <h4 style="color:#6bae00;font-size: 35px;padding-left: 1%;">Terms of Use</h4>
                    <div style="padding-left: 1%;"><apex:outputField value="{!termsOfUseAgreement.Agreement_Text__c}"/></div>
                </div>
            </div>
        </apex:pageBlock>
    </apex:form>
</apex:page>