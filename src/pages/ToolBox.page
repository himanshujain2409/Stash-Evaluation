<apex:page standardController="Demo_Toolbox__c" recordSetVar="Demo_Toolboxs__c"  extensions="ToolBoxController">
<apex:form >
 <apex:pageBlock title="Demo Toolbox">
   
     <apex:pageBlockSection columns="1" title="Filtered Views">
      <apex:panelGroup >
  
        <b>View: </b>   &nbsp; &nbsp;
             <apex:selectList styleClass="listView" value="{!filterid}" size="1">
                        <apex:selectOptions value="{!listviewoptions}" />
              </apex:selectList>
               <apex:commandButton value="Go" action="{!list}" />
        </apex:panelGroup>
     </apex:pageBlockSection>
        <apex:pageBlockSection columns="1" title="Search ToolBox">
     <apex:panelGroup >
      <b>  Search Text: </b> &nbsp; &nbsp; <apex:inputText value="{!searchText}" ></apex:inputText>
       <apex:commandButton value="search" action="{!search}"   />
       </apex:panelGroup>
     </apex:pageBlockSection>
  </apex:pageBlock>
   <apex:pageBlock rendered="{!searchresults.size!=0}">
    <apex:pageBlockTable value="{!searchresults}" var="t">
        <apex:column headerValue="Name" > <apex:outputLink value="/{!t.id}">{!t.name}</apex:outputLink> </apex:column>
        <apex:column value="{!t.Preview__c}"  />
        <apex:column value="{!t.Description__c}"  />
        <apex:column value="{!t.Product__c}"  />
        <apex:column value="{!t.Version__c}"  />
    </apex:pageBlockTable>
   
     <apex:pageBlockButtons location="Top">
       <apex:commandButton value="NEW" action="{!gotonext}"   />
     </apex:pageBlockButtons>
    </apex:pageBlock>
</apex:form>    
</apex:page>